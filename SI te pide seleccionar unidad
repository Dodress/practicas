/*SI TE PIDE SELECCIONAR UNIDAD VAS A TENER QUE HACER 2 FORMULARIOS, EL PRIMERO PIDE LA UNIDAD CON UN BOTON,
Y EL SEGUNDO TIENE TODOS LOS BOTONES PARA TODAS LAS CONSULTAS*/

//EN EL PRIMER FORMULARIO DECLARAS EL SIGUIENTE METODO Y CUANDO PRESIONES EL BOTON LO MANDAS LLAMAR

//LA UNIDAD DEBE DE SER ESCRITA CON MAYUSCULA, EJEMPLO --> D

//SI OCUPAS SELECCIONAR LA UNIDAD DE DISCO, DECLARAS LA SIGUIENTE VARIABLE EN EL FORMULARIO DONDE HACES CONSULTAS, EN EL PARTIAL
        public string disco = "";    
        //SI OCUPAS SELECCIONAR LA UNIDAD DE DISCO, EN TODOS LOS METODOS, EL CAMPO LLAMADO rutaDeTuBaseDeDatos, TODA ESA LINEA LA ESCRIBES ASI
        string rutaDeTuBaseDeDatos = disco+":/Clientes.mdb";//ENTRE LAS COMILLAS PONES DONDE ESTA TU BASE DE DATOS SIN LA UNIDAD, EJEMPLO --> :/Clientes.mdb


ublic void seleccionar_unidad() {
            Form1 f = new Form1();//EN DONDE DICE Form1, LO SUSTITUYES POR EL FORMULARIO DONDE HAGAS TODAS LAS CONSULTAS, EJEMPLO--> Form2 f=new Form2();
            f.disco = textBox1.Text;//AQUI PONES EL TEXBOX DONDE EL USUARIO ESCRIBRE LA UNIDAD DE DISCO, EJEMPLO --> textbox1.Text
            f.Show();
            Hide();
        }
